<configuration>

	<appender name="std-out" class="ch.qos.logback.core.ConsoleAppender">   
		<encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
		  <pattern>%date [%thread] %logger %n%-5level: %message%n</pattern>
		</encoder>
	</appender>
 
    <appender name="err-out" class="ch.qos.logback.core.rolling.RollingFileAppender">                    
		<file>${appRootPath}/log/err.log</file>
		<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
		  <fileNamePattern>${appRootPath}/log/err_%d{yyyy-MM-dd}.log.zip</fileNamePattern>
		</rollingPolicy>			   				   
		<filter class="ch.qos.logback.classic.filter.ThresholdFilter">
			<level>ERROR</level>
		</filter>		
		<encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
		  <pattern>%date [%thread] %-5level %caller{1} - %message%n</pattern>
		</encoder>	
    </appender>	  
	
    <appender name="info-out" class="ch.qos.logback.core.rolling.RollingFileAppender">                    
		<file>${appRootPath}/log/info.log</file>
		<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
		  <fileNamePattern>${appRootPath}/log/info_%d{yyyy-MM-dd}.log.zip</fileNamePattern>
		</rollingPolicy>			   				   
		<filter class="ch.qos.logback.classic.filter.LevelFilter">
			<level>INFO</level>
			<onMatch>ACCEPT</onMatch>
			<onMismatch>DENY</onMismatch>
		</filter>
		<encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
		  <pattern>%date [%thread] %-5level %caller{1} - %message%n</pattern>
		</encoder>	
    </appender>	  

    <appender name="debug-out" class="ch.qos.logback.core.rolling.RollingFileAppender">                    
		<file>${appRootPath}/log/debug.log</file>
		<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
		  <fileNamePattern>${appRootPath}/log/debug_%d{yyyy-MM-dd}.log.zip</fileNamePattern>
		</rollingPolicy>			   				   
		<filter class="ch.qos.logback.classic.filter.ThresholdFilter">
			<level>DEBUG</level>
		</filter>		
		<encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
		  <pattern>%date [%thread] %-5level - %message%n</pattern>
		</encoder>	
    </appender>	  	

	<root>
		<level value="INFO" />
		<!-- <appender-ref ref="std-out" /> -->
		<appender-ref ref="err-out" />
		<appender-ref ref="info-out" />
		<appender-ref ref="debug-out" />
	</root>  
    
</configuration>
